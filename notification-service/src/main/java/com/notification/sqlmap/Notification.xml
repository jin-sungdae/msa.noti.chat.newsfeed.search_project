<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.notification.mapper.NotificationMapper">

    <insert id="insertNotification">
        INSERT INTO notifications (user_id, event_id, message, status, created_at)
        VALUES (#{userId}, #{eventId}, #{message}, 'PENDING', NOW())
    </insert>

    <select id="getNotificationsByUserId" resultType="com.notification.model.Notification">
        SELECT * FROM notifications WHERE user_id = #{userId}
    </select>

</mapper>